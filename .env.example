# OpenAI Configuration
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7

# MCP Server
MCP_SERVER_URL=http://localhost:8888/mcp/

# Server
NODE_ENV=development
PORT=3001

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080,https://dowhistle-beta-assistant.netlify.app/

# Rate Limiting (general)
GENERAL_WINDOW_MS=900000          # 15 minutes
GENERAL_RATE_LIMIT=100            # 100 requests per 15 min per IP

# AI Rate Limiting (stricter since it hits OpenAI API)
AI_WINDOW_MS=60000                # 1 minute
AI_RATE_LIMIT=20                  # 20 requests per minute per IP

# MCP Rate Limiting (slightly looser)
MCP_WINDOW_MS=60000               # 1 minute
MCP_RATE_LIMIT=50                  # 50 requests per minute per IP

# Logging
LOG_LEVEL=info
